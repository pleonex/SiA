<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>exe</OutputType>
    <AssemblyName>SiA</AssemblyName>
    <Description>Tool to decrypt XML files from Night of Azure.</Description>
    <Version>1.0.0</Version>

    <Authors>pleonex</Authors>
    <Copyright>Copyright (c) 2018 Benito Palacios Sanchez (pleonex)</Copyright>
    <RepositoryUrl>https://github.com/pleonex/SiA</RepositoryUrl>
    <License>GPL-3.0-or-later</License>
    <PackageProjectUrl>https://github.com/pleonex/SiA</PackageProjectUrl>
    <PackageTags>translation;localization;romhacking;fan-translation</PackageTags>

    <TargetFrameworks>net48;netcoreapp3.0</TargetFrameworks>
    <RootNamespace>SiA</RootNamespace>
    <GenerateDocumentationFile>false</GenerateDocumentationFile>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Yarhl" Version="3.0.0-alpha07" />
    <PackageReference Include="Microsoft.NETFramework.ReferenceAssemblies" Version="1.0.0-preview.2">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\SiA.Library\SiA.Library.csproj" />
  </ItemGroup>
</Project>
